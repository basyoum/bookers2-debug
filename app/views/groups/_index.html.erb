<table class = 'table table-hover table-inverse'>
  <thred>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
    </tr>
  </thred>
  <tbody>
    <% groups.each do |group| %>
    <tr>
      <td><%= image_tag group.get_image, size:'50x50' %> </td>
      <%#= link_to group.name, group_path(group) %>
      <%#= group.introduction %>
      <td><%= link_to group.name, group, class: "group_#{group.id}" %></td>
      <td><%= group.introduction  %></td>
      <td><%= group.group_users.count %></td>
      <td>
        <%# if group.owner_id == current_user.id %>
        <% if group.is_owned_by?(current_user) %>
         <%= link_to 'Edit', edit_group_path(group), class: "group_#{group.id}", class:"btn btn-sm btn-success" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>